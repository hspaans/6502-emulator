{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/flake8:2": {
      "version": "latest",
      "plugins": "flake8-black flake8-doc flake8-isort flake8-print flake8-pylint flake8-builtins flake8-spellcheck flake8-pytest-style"
    },
    "ghcr.io/devcontainers-contrib/features/yamllint:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/tox:2": {
      "version": "latest"
    }
  },
  "postCreateCommand": "pip3 install --user -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "github.vscode-github-actions",
        "ms-python.autopep8",
        "ms-python.flake8"
      ],
      "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true
      },
      "settings": {
        "python.formatting.provider": "flake8",
        "python.testing.pytestArgs": [
          "tests"
        ],
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "python.analysis.inlayHints.pytestParameters": true
      }
    }
  }
}